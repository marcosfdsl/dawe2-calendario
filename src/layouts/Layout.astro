---
import Header from "../components/Header.astro";
import logo from "../fotos/logo.png";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="Sofos" content="Tienda Online" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={logo.src} />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Kanit&display=swap"
			rel="stylesheet"
		/>
		<script src="https://kit.fontawesome.com/bf7e2ba98b.js" crossorigin="anonymous"></script>
		<style is:global>
			.menu {
				background-color: rgb(34, 34, 34);
				width: 100vw;
				height: 10vh;
				position: fixed;
				z-index: 20;
			}

			.contenido {
				width: 100vw;
				height: 90vh;
				position: absolute;
				top: 10vh;
			}

			.botonlogoheader {
				display: flex;
				flex-direction: column;
				justify-content: center;
				align-items: flex-start;
				height: 10vh;
				padding-left: 5%;
			}

			.botonesmenu {
				display: none; /* Cuando se pulsa el bot√≥n, el display cambia a flex */
				flex-direction: column;
				height: 90vh;
				background-color: rgba(0, 0, 0, 0.89);
			}

			.botoncontenido {
				color: white;
				padding-top: 10%;
				padding-bottom: 10%;
				padding-left: 10%;
				padding-right: 10%;
				transition: all 0.3s;
				display: flex;
				justify-content: center;
			}

			.botoncontenido:hover {
				background-color: rgba(0, 0, 0, 0.466);
			}

			.botoncontenidoactual {
				background-color: black;
				color: white;
				padding-top: 10%;
				padding-bottom: 10%;
				padding-left: 10%;
				padding-right: 10%;
				display: flex;
				justify-content: center;
			}

			.logobotoncontenido {
				color: white;
				font-size: x-large;
				margin-right: 10%;
			}

			.logobotoncontenido2 {
				color: white;
				font-size: x-large;
				margin-right: 5%;
			}

			.documentacion {
				width: 100%;
				color: rgb(196, 196, 196);
				font-size: small;
				position: absolute;
				display: none;
				justify-content: center;
				top: 85vh;
			}

			.hrv {
				display: none;
			}

			@media (min-width: 1024px) {
				.menu {
					position: relative;
					width: 13vw;
					height: 100vh;
				}

				.contenido {
					position: absolute;
					width: 87vw;
					height: 100vh;
					top: 0vh;
					left: 13vw;
				}

				.botonlogoheader {
					height: 15vh;
					padding-left: 10%;
					padding-right: 10%;
				}

				.botonesmenu {
					display: flex;
					height: 30vh;
					justify-content: flex-start;
					background-color: transparent;
				}

				.botoncontenido {
					color: white;
					padding-top: 10%;
					padding-bottom: 10%;
					padding-left: 10%;
					padding-right: 10%;
					transition: all 0.3s;
					justify-content: flex-start;
				}

				.botoncontenidoactual {
					background-color: black;
					color: white;
					padding-top: 10%;
					padding-bottom: 10%;
					padding-left: 10%;
					padding-right: 10%;
					justify-content: flex-start;
				}

				.logobotoncontenido2 {
					display: none;
				}

				.documentacion {
					display: flex;
					flex-direction: column;
					justify-content: flex-end;
					margin-left: 10%;
					height: 4%;
					top: 48%;
					position: relative;
					margin-bottom: 3vh;
				}

				.hrv {
					display: flex;
					border: none;
					border-left: 1px solid hsla(200, 10%, 50%, 100);
					height: 100%;
					width: 1px;
				}
			}
		</style>
	</head>
	<body>
		<div class="flexhorizontal bg-gray-50">
			<Header />
			<slot />
		</div>
		<script>
			var botonMenu = document.getElementById("botonmenu") as HTMLElement;
			var botonesMenu = document.querySelector(
				".botonesmenu",
			) as HTMLElement;
			var documentacion = document.querySelector(
				".documentacion",
			) as HTMLElement;

			botonMenu.addEventListener("click", function () {
				if (
					botonesMenu.style.display === "none" ||
					botonesMenu.style.display === ""
				) {
					botonesMenu.style.display = "flex";
					documentacion.style.display = "flex";
				} else {
					botonesMenu.style.display = "none";
					documentacion.style.display = "none";
				}
			});
		</script>
	</body>
</html>
